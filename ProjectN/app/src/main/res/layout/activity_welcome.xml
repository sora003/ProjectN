<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >


    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:textColor="@color/text_white"
        android:layout_marginTop="60dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_welcome_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/character_01"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/twice_activity_horizontal_margin"
            android:paddingRight="@dimen/twice_activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/card"
            android:layout_marginTop="@dimen/twice_activity_vertical_margin"/>

        <TextView
            android:id="@+id/tv_welcome_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/character_02"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/twice_activity_horizontal_margin"
            android:paddingRight="@dimen/twice_activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/card"
            android:layout_marginTop="@dimen/twice_activity_vertical_margin"/>

        <TextView
            android:id="@+id/tv_welcome_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/character_03"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/twice_activity_horizontal_margin"
            android:paddingRight="@dimen/twice_activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/card"
            android:layout_marginTop="@dimen/twice_activity_vertical_margin"/>


    </LinearLayout>
</LinearLayout>