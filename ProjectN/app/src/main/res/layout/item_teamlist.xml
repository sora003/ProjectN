<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/iv_teamList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_teamList"
            android:layout_alignBottom="@+id/tv_teamList"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/teamLogo_maxWidth"/>

        <TextView
            android:id="@+id/tv_teamList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/team_horizontal_margin"
            android:layout_toRightOf="@+id/iv_teamList"
            android:textSize="@dimen/teamSize"
            android:textColor="@color/color_grey"
            android:text="test2" />


    </RelativeLayout>

</RelativeLayout>