<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_name"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_score"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_two"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_three"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_reb"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_ass"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_steal"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_blockshot"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_turnover"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <TextView
        android:id="@+id/match_player_foul"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />
    
</LinearLayout>