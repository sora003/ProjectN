<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_LLGrey">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/conference_horizontal_margin">

        <TextView
            android:id="@+id/tv_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_league"
            android:textSize="@dimen/teamDataSize"/>

        <TextView
            android:id="@+id/tv_conference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/teamdata_vertical_margin"
            android:textSize="@dimen/teamDataSize"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/teamdata_vertical_margin"
            android:textSize="@dimen/teamDataSize"/>

        <TextView
            android:id="@+id/tv_court"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/teamdata_vertical_margin"
            android:textSize="@dimen/teamDataSize"/>


        <TextView
            android:id="@+id/tv_founded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/teamdata_vertical_margin"
            android:textSize="@dimen/teamDataSize"/>

        <TextView
            android:id="@+id/tv_champions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/teamdata_vertical_margin"
            android:textSize="@dimen/teamDataSize"/>


    </LinearLayout>
</LinearLayout>