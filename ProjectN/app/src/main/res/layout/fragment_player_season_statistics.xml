<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tv_season_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_is_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_total_matches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>


                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>


                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_off_reb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_def_reb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_tot_reb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_ass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_steal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_block_shot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_two_shot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_two_hit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_three_shot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_three_hit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_free_throw_shot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_free_throw_hit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>


                <TextView
                    android:id="@+id/tv_turn_over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>

                <TextView
                    android:id="@+id/tv_foul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/teamdata_vertical_margin"
                    android:textSize="@dimen/teamDataSize"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>