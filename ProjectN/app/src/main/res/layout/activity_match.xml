                        android:text="失误"
                        android:textSize="@dimen/playerSize" />

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="30dp"
                        android:text="犯规"
                        android:textSize="@dimen/playerSize" />

                </LinearLayout>

                <com.sora.projectn.utils.MyListView
                    android:id="@+id/match_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_title2">

                </com.sora.projectn.utils.MyListView>
                    </RelativeLayout>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/match_t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客队"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_below="@id/HSV_for_match2"
                    android:textSize="@dimen/titleSize"/>
                <HorizontalScrollView
                    android:id="@+id/HSV_for_match3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_t3"
                    android:scrollbars="none">
                    <RelativeLayout
                        android:id="@+id/match_card3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/card"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/match_title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
