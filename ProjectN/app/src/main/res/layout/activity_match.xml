                        android:textSize="@dimen/playerSize" />

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="30dp"
                        android:text="盖帽"
                        android:textSize="@dimen/playerSize" />

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="30dp"
                        android:text="失误"
                        android:textSize="@dimen/playerSize" />

                    <TextView
                        android:layout_width="60dip"
                        android:layout_height="30dp"
                        android:text="犯规"
                        android:textSize="@dimen/playerSize" />
                </LinearLayout>

                    <com.sora.projectn.utils.MyListView
                       android:id="@+id/match_3"
                        android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/match_title3">

                   </com.sora.projectn.utils.MyListView>
                    </RelativeLayout>
                </HorizontalScrollView>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>