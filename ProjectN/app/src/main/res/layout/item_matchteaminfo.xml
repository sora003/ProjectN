<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/match_team_name"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/match_team_ifhome"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_team_score"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/match_team_two"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_team_three"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/match_team_reb"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_team_ass"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_team_steal"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_team_blockshot"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_team_turnover"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/match_team_foul"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


</LinearLayout>