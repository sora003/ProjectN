<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/match_player_name"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_player_score"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_player_two"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_player_three"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_player_reb"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_player_ass"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/match_player_steal"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/match_player_blockshot"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/match_player_turnover"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/match_player_foul"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />
    
</LinearLayout>